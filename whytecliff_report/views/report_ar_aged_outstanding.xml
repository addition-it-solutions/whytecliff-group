<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_aragedoutstanding">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2>Net Receivables/Payables by Org</h2>

                <div class="row mt32 mb32">
                    <div class="col-xs-3">
                        <strong>Chart of Accounts:</strong>
                        <p t-esc="get_account(data)"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Fiscal Year:</strong>
                        <p t-esc="get_fiscalyear(data)"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>For Period:</strong>
                        <p t-esc="get_period(data)"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Organization Name</th>
                            <th class="text-right">Total Due In Invoiced Currency</th>
                            <th class="text-right">Current</th>
                            <th class="text-right">Period 1</th>
                            <th class="text-right">Period 2</th>
                            <th class="text-right">Period 3</th>
                            <th class="text-right">Period 3+</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="get_currency()" t-as="currency">
                            <tr style="font-weight: bold;">
                                <td colspan="4">
                                    Currency: <span t-esc="currency['name']"/>
                                </td>
                            </tr>
                            <tr t-foreach="lines(data,currency['name'])" t-as="line">
                                <td>
                                    <span style="color: white;" t-esc="'..'"/>
                                    <span t-esc="line.get('name')"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="formatLang(line.get('residual'))"/>
                                </td>
                                <!--td class="text-right">
                                    <span t-esc="formatLang(line.get('current_balance'))"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="formatLang(line.get('period_1'))"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="formatLang(line.get('period_2'))"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="formatLang(line.get('period_3'))"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="formatLang(line.get('period_4'))"/>
                                </td-->
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>