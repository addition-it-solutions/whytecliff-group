<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="whytec_account_partner_balance_report_view" model="ir.ui.view">
            <field name="name">Aged Summary</field>
            <field name="model">whytec.partner.balance</field>
            <field name="inherit_id" ref="account.account_common_report_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='filters']" position="replace">
                </xpath>
                <xpath expr="//notebook/page[@string='Journals']" position="replace">
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Partners">
                        <field name="partner_ids" colspan="2" nolabel="1"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="action_whytec_partner_balance" model="ir.actions.act_window">
            <field name="name">Aged Summary</field>
            <field name="res_model">whytec.partner.balance</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="whytec_account_partner_balance_report_view"/>
            <field name="target">new</field>
        </record>


        <menuitem
                icon="STOCK_PRINT"
                name="Aged Summary"
                parent="account.final_accounting_reports"
                action="action_whytec_partner_balance"
                id="menu_action_whytec_partner_balance"
               />

    </data>
</openerp>